<title>Transaction</title>

<div class="row">
    <div>
        <div class="col-12">

            <h5 class="card-title">Transaction</h5>
            <br />
        </div>
        <div class="col-8">
            <input type="hidden" id="hdnid" />
        </div>
        <div class="col-8">
            <label>Item Name</label>
            <select type="text" class="form-control" id="ddlItem"></select>
        </div>
        <div class="col-8">
            <label>Department</label>
            <select type="text" class="form-control" id="ddldepartment"></select>
        </div>
        <div class="col-8">
            <label>Vendor</label>
            <select type="text" class="form-control" id="ddlvender"></select>
        </div>
        <div class="col-8">
            <label>Transaction Type</label>
            <select type="text" class="form-control" id="ddltrantype">
                <option value="I">Issue</option>
                <option value="P">Purchase</option>
            </select>
        </div>
        <div class="col-8">
            <label>Quantity</label>
            <input type="text" id="txtTQ" class="form-control" />
        </div>
        <div class="col-8">
            <label>Transaction date</label>
            <input type="date" id="txtTDate" class="form-control" />
        </div>
        <br />
        <div class="col-8">
            <button type="submit" onclick="SaveTransaction()" class="btn btn-primary">Submit</button>
        </div>
        <br />
    </div>
    <section>

        <table id="tblTransaction" class="flex-column table table-striped-columns">

            <thead class="text-white bg-dark">
                <tr>


                    <td class="text-white bg-dark">Transaction_id</td>
                    <td class="text-white bg-dark">Item Name</td>
                    <td class="text-white bg-dark">Vendor_name</td>
                    <td class="text-white bg-dark">Department_name</td>
                    <td class="text-white bg-dark">TransactionType</td>
                    <td class="text-white bg-dark">Quantity</td>
                    <td class="text-white bg-dark">Transaction_date</td>
                    <td class="text-white bg-dark"></td>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </section>
</div>
